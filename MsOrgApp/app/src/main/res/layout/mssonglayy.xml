<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="20"
    android:id="@+id/mssonglayyout"
    android:background="@drawable/transparentshape"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:id="@+id/singerimg"
        android:background="@drawable/mslogobuy"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"/>

    <TextView
        android:id="@+id/singernamee"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:text="@string/app_name"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/raleway_medium"
        android:tag="@string/bastex"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/songnamee"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="@string/app_name"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/raleway_medium"
        android:tag="@string/bastex"
        android:textSize="20sp"/>


    <SeekBar
        android:id="@+id/singerseek"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:thumbTint="@color/msdef"
        android:progressTint="@color/msdef"
        android:progressBackgroundTint="@color/msdef"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:weightSum="3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sharesongi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_sharems"/>

        <ImageView
            android:id="@+id/openwork"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_videooffline"/>

        <ImageView
            android:id="@+id/addfavsong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_favlargebos"/>

    </LinearLayout>



</LinearLayout>