<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/pdfediterana"
    android:background="#DAFFFFFF"
    android:weightSum="20"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/pdfediteret"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center"
        android:fontFamily="@font/raleway_medium"
        android:cursorVisible="true"
        android:textColor="@color/black"
        android:inputType="text"
        android:hint="Buraya YazÄ±n..."
        android:textColorHint="#616161"
        android:focusable="true"
        android:tag="@string/basedit"
        android:focusableInTouchMode="true"/>

    <LinearLayout
        android:background="#BA000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="18"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pdfediterok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_okpop"
            android:layout_weight="3"/>




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_weight="6">

            <TextView
                android:id="@+id/pdfediterboybas"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:text="Boyut"
                android:tag="@string/bastex"
                android:gravity="center"
                android:fontFamily="@font/raleway_semibold"
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <SeekBar
                android:id="@+id/pdfediterboyseek"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:progressTint="@color/msdef"
                android:progressBackgroundTint="@color/msdef"
                android:thumbTint="@color/msdef"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_weight="6">

            <TextView
                android:tag="@string/bastex"
                android:id="@+id/pdfediterbasrenk"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:text="Renk"
                android:gravity="center"
                android:fontFamily="@font/raleway_semibold"
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <SeekBar
                android:id="@+id/pdfediterseekrenk"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:progressTint="@color/black"
                android:progressBackgroundTint="@color/msdef"
                android:thumbTint="@color/black"/>



        </LinearLayout>

        <ImageView
            android:id="@+id/pdfeditercancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_cancelpop"
            android:layout_weight="3"/>


    </LinearLayout>

</LinearLayout>