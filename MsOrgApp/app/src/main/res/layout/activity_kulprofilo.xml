<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/kulprofilli"
    android:padding="5dp"
    android:layout_height="match_parent"
    tools:context=".kulprofilo">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#D0000000"
        android:weightSum="20">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="10"
            android:padding="3dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mainmenu"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_menucol"/>

            <TextView
                android:id="@+id/hosbasprof"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:fontFamily="@font/raleway_medium"
                android:textSize="25sp"
                android:text=" Hoşgeldin..."
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7.5"/>

            <ImageView
                android:id="@+id/mainsearchi"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:src="@drawable/ic_searching"/>







        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="20"
            android:orientation="horizontal"
            android:layout_weight="3.75">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:id="@+id/kulprores"
                android:src="@drawable/ic_person_pin"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_weight="13">

                <EditText
                    android:textCursorDrawable="@null"
                    android:backgroundTint="@color/msdef"
                    android:focusable="false"
                    android:enabled="false"
                    android:focusableInTouchMode="true"
                    android:id="@+id/kuledtexfilo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/raleway_medium"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:inputType="text"
                    android:hint="Kullanıcı Adı ..."/>

                <EditText
                    android:textCursorDrawable="@null"
                    android:backgroundTint="@color/msdef"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:id="@+id/sifedtexfilo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:hint="Şifre..."
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="20"
            android:orientation="horizontal">

            <EditText
                android:textCursorDrawable="@null"
                android:backgroundTint="@color/msdef"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:id="@+id/emedtexfilo"
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:hint="E-Mail..."
                />

        </LinearLayout>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12.25"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linoscroli">


                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/ilgsanprof"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="İlgİlendİğİm Sanatçılar (0)"
                    android:fontFamily="@font/luckiest_guy"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SpeakableTextPresentCheck">

                    <LinearLayout
                        android:id="@+id/ilgsanlay"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="horizontal">

                    </LinearLayout>

                </HorizontalScrollView>



                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/favsarprof"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="Favori Şarkılarım (0)"
                    android:fontFamily="@font/luckiest_guy"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="SpeakableTextPresentCheck">

                    <LinearLayout
                        android:id="@+id/favsarlay"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:orientation="horizontal">

                    </LinearLayout>

                </HorizontalScrollView>





            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>